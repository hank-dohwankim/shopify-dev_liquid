<footer class="footer section text-center">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <ul class="social-media">
          {% if section.settings.facebook != blank %}
            <li>
              <a href="{{section.settings.facebook}}">
                <i class="fa fa-facebook-f"></i>
              </a>
            </li>
          {% endif %}
          {% if section.settings.instagram != blank %}
            <li>
              <a href="{{section.settings.instagram}}">
                <i class="fa fa-instagram-f"></i>
              </a>
            </li>
          {% endif %}
          {% if section.settings.twitter != blank %}
            <li>
              <a href="{{section.settings.twitter}}">
                <i class="fa fa-twitter-f"></i>
              </a>
            </li>
          {% endif %}
          {% if section.settings.pinterest != blank %}
            <li>
              <a href="{{section.settings.pinterest}}">
                <i class="fa fa-pinterest-f"></i>
              </a>
            </li>
          {% endif %}
        </ul>
        <ul class="footer-menu">
          <li>
            <a href="">Contact</a>
          </li>
          <li>
            <a href="">SHIPPING</a>
          </li>
          <li>
            <a href="">TERMS OF SERVICE</a>
          </li>
          <li>
            <a href="">PRIVACY POLICY</a>
          </li>
        </ul>
        <p class="copyright-text">Copyright &#9400; Fashion</p>
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "text",
      "id": "facebook",
      "label": "Facebook Link"
    },
    {
      "type": "text",
      "id": "instagram",
      "label": "Instagram Link"
    },
    {
      "type": "text",
      "id": "pinterest",
      "label": "Pinterest Link"
    },
    {
      "type": "text",
      "id": "twitter",
      "label": "Twitter Link"
    }
  ]
}
{% endschema %}